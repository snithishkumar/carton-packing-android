<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    card_view:cardCornerRadius="4dp"
    tools:context=".view.activity.HomeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/order_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/image_placeholder" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/gl"
            android:layout_alignTop="@+id/order_image"
            android:layout_toRightOf="@+id/order_image"
            android:layout_toEndOf="@+id/order_image"
            android:layout_toStartOf="@+id/ordered_list_order_date"
            android:paddingStart="10dp"
            android:layout_width="wrap_content">

            <TextView
                android:text="Deliver Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ordered_list_deliver_id"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                />

            <TextView
                android:text="Order Id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ordered_list_order_id"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/holo_red_dark" />

            <TextView
                android:text="Client Name"
                android:layout_width="wrap_content"
                android:id="@+id/ordered_list_client_name"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:paddingBottom="5dp"
                android:layout_height="38dp" />

        </LinearLayout>


        <TextView
            android:text="Created By:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ordered_list_created_by"
            android:paddingTop="15dp"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_alignBaseline="@+id/gl"
            android:layout_alignBottom="@+id/gl"
            android:layout_toRightOf="@+id/order_image"
            android:layout_toEndOf="@+id/order_image"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp" />


        <TextView
            android:id="@+id/ordered_list_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/order_image"
            android:paddingTop="1dp"
            android:layout_marginEnd="15dp"
            android:textSize="14sp"
            android:text="18/02/2018"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/ordered_list_ordered_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:layout_toEndOf="@+id/gl"
            android:paddingTop="1dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="10"
            android:textColor="@android:color/black" />

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/ordered_list_reports"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_more_vert_black_48dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/ordered_list_ordered_items"
            android:layout_centerVertical="true"
            />

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_below="@+id/ordered_list_created_by"
            android:background="#ebebeb" />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:text="Shipping Type : CAR" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:text="Created By: admin" />




    </RelativeLayout>


</LinearLayout>


    </android.support.v7.widget.CardView>