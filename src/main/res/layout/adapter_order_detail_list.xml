<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="5dp"
    card_view:cardCornerRadius="4dp"
    android:background="@android:color/white"
    tools:context=".view.activity.OrderDetailsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/order_details_carton_no"
            android:layout_width="60dp"
            android:layout_height="60dp"
            style="@style/key_style"
            android:text="4"
            android:clickable="false"
            android:layout_margin="20dp"/>




        <TextView
            android:id="@+id/order_details_pro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/order_details_carton_no"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/order_details_carton_no"
            android:layout_toLeftOf="@+id/order_details_pro_del"
            android:layout_toStartOf="@+id/order_details_pro_del"
            android:text="Carol Bell"
            android:textColor="#827f93"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_details_pro_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/order_details_pro_name"
            android:layout_below="@+id/order_details_pro_name"
            android:layout_marginBottom="10dp"
            android:text="Graphic Designer"
            android:textColor="#827f93" />

        <ImageButton
            android:id="@+id/order_details_pro_del"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_delete_black_48dp"
            android:text="Delete"
            android:textColor="#827f93" />
        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/order_details_carton_no"

            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/divider2"
            android:id="@+id/order_items_size_details"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/ic_receipt_black_48dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="Order Details:"
                    android:id="@+id/size_details"
                    android:layout_marginLeft="5dp"
                    />

            </LinearLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ordered_size_count_layout_1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/ordered_one_size_count"
                        android:text="One Size -> 10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/ordered_l_count"
                        android:text="L -> 10" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ordered_size_count_layout_2"
                    android:layout_toRightOf="@+id/ordered_size_count_layout_1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/ordered_xs_count"
                        android:text="XS -> 10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/ordered_xl_count"
                        android:text="XL -> 10" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ordered_size_count_layout_3"
                    android:layout_toRightOf="@+id/ordered_size_count_layout_2"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ordered_s_count"
                        android:text="S -> 10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ordered_xxxl_count"
                        android:text="XXXL -> 10" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/ordered_size_count_layout_4"
                    android:layout_toRightOf="@+id/ordered_size_count_layout_3"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/ordered_m_count"
                        android:text="M -> 10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:id="@+id/ordered_xxl_count"
                        android:text="XXL -> 10" />

                </LinearLayout>





            </RelativeLayout>








        </LinearLayout>


        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/order_items_size_details"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#ebebeb" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/divider1"
            android:id="@+id/capture_carton_layout"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="20dp"
                android:src="@drawable/ic_assignment_black_48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:text="Product Details:"
                android:id="@+id/size_details_1"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/capture_carton_layout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/order_details_one_size"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:layout_gravity="center"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="One Size" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/order_details_xs"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:layout_gravity="center"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="XS" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/order_details_s"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="S" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"

                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/order_details_m"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="M" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/order_details_l"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="L" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/order_details_xl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="XL" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/order_details_xxl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="XXL" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/order_details_xxxl"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:background="@drawable/round"
                        android:clickable="false"
                        android:text="4222" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="XXL" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/itemlayout"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="#ebebeb" />


        <TextView
            android:id="@+id/text_likes_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="Created On:"
            android:textColor="#827f93"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/order_details_created_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_likes_count"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:text="17/2/2018 3:45 PM"
            android:textColor="#827f93"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/order_details_lastmodified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_alignEnd="@+id/divider"
            android:text="Modified On:"
            android:layout_marginTop="15dp"
            android:textColor="#827f93"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/order_details_lastmodified_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_details_lastmodified"
            android:layout_alignEnd="@+id/divider"
            android:text="17/2/2018 3:45 PM"
            android:textColor="#827f93"
            android:textSize="12sp" />


    </RelativeLayout>
</android.support.v7.widget.CardView>

